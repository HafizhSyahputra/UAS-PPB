<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="800dp"
    android:paddingBottom="16dp"
    tools:context=".airplaneFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:paddingBottom="150dp"
    android:orientation="horizontal">


    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/register_gradient"
        />

    <Button
        android:id="@+id/pesan"
        android:layout_width="298dp"
        android:layout_height="51dp"
        android:backgroundTint="#000"
        android:elevation="2dp"
        android:layout_marginTop="520dp"
        android:layout_marginStart="-360dp"
        android:fontFamily="@font/poppinsregular"
        android:text="Pesan Tiket"
        android:textSize="20sp"
        app:strokeColor="#837E7E" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:text="Our Airplane"
        android:layout_marginStart="-270dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinssemibold"
        android:textSize="20dp"
        android:layout_marginStart="-180dp"
        android:text="Tips Memesan Tiket Pesawat"
        android:layout_marginTop="320dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsregular"
        android:textSize="14dp"
        android:layout_marginStart="-290dp"
        android:text="1. Pesan Tiket dengan Waktu yang Tepat"
        android:layout_marginTop="360dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsregular"
        android:textSize="14dp"
        android:layout_marginStart="-281dp"
        android:text="2. Fleksibilitas Waktu Keberangkatan"
        android:layout_marginTop="390dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsregular"
        android:textSize="14dp"
        android:layout_marginStart="-256dp"
        android:text="3. Pilih Bandara Alternatif"
        android:layout_marginTop="420dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsregular"
        android:textSize="14dp"
        android:layout_marginStart="-175dp"
        android:text="4. Manfaatkan Diskon dan Penawaran Khusus"
        android:layout_marginTop="450dp"
        />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-360dp"
        android:layout_marginTop="20dp"
        android:foregroundGravity="center_vertical">

        <!-- child view -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:foregroundGravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- LinearLayout children -->
            <androidx.cardview.widget.CardView
                android:layout_width="128dp"
                android:layout_height="132dp"
                android:layout_margin="25dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp">

                <ImageButton
                    android:id="@+id/h1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="#ffff"
                    android:contentDescription="b"
                    android:padding="15dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/plane" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="128dp"
                android:layout_height="132dp"
                android:layout_margin="25dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp">

                <ImageButton
                    android:id="@+id/h2"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="@color/white"
                    android:contentDescription="a"
                    android:scaleType="fitCenter"
                    android:src="@drawable/plane3" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="128dp"
                android:layout_height="132dp"
                android:layout_margin="25dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp">

                <ImageButton
                    android:id="@+id/h3"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="42dp"
                    android:layout_marginTop="10dp"
                    android:background="#ffff"
                    android:padding="0dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/plane4" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="128dp"
                android:layout_height="132dp"
                android:layout_margin="25dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp">

                <ImageButton
                    android:id="@+id/h4"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="#ffff"
                    android:padding="1dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/plane5" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:background="@drawable/radius"

        />


</LinearLayout>

</androidx.core.widget.NestedScrollView>